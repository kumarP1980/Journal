<%- include('partials/header_home'); %>
<link rel="icon" href="images\noteBook.jpg" />
<link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
<h1>Edit Blog</h1>
<form class="" action="/editPost" method="post"> 
  <input type="hidden" name="user" value="<%=user%>" /> 
  <input type="hidden" name="blogID" value="<%=id%>" />
  <input type="hidden" name="date" value="<%=date%>" />
  <div class="form-group">
    <label for="usr">Title</label>
    <input type="text" class="form-control" id="usr" name="title" value="<%=title%>">
  </div>
  <div class="form-group">    
    <input type="hidden" name="body[title]">
     <div id="editor"><%- blogText%></div>     
  </div>
  <button type="submit" name="button" class="btn btn-primary btn-sm" onclick="return quillContents()">Publish</button>
 
</form>

<!-- Include the Quill library -->
<script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>

<!-- Initialize Quill editor -->
<script>
  var quill = new Quill('#editor', {
    theme: 'snow'
  });

  const quillContents = () => {
         const form = document.forms[0]
         const editor = document.createElement('input')

         editor.type = 'hidden'
         editor.name = 'body[content]'
         editor.value = document.querySelector('.ql-editor').innerHTML
         form.appendChild(editor)

         return form.submit()
     }

</script>